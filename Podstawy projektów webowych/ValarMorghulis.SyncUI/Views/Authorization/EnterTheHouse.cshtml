@model ValarMorghulis.SyncUI.ViewModels.Authorization.EnterTheHouseViewModel

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<title>Enter the House</title>
</head>
<body>
	<div>
		<div class="row">
			<div class="col-xs-4 col-xs-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Enter the House</h3>
					</div>
					<div class="panel-body">
						@using (Html.BeginForm())
						{
							<div class="form-group">
								@Html.LabelFor(model => model.CharacterName)
								@Html.EditorFor(model => model.CharacterName, new { htmlAttributes = new { @class = "form-control", @autofocus = "1" } })
								@Html.ValidationMessageFor(x => x.CharacterName)
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.HouseWords)
								@Html.PasswordFor(model => model.HouseWords, new { @class = "form-control" })
								@Html.ValidationMessageFor(x => x.HouseWords)
							</div>
							<button style="width: 100%" type="submit" class="btn btn-default">Enter</button>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
